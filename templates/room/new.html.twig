{% extends 'base.html.twig' %}

{% block title %}Create New Room{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4"><i class="fas fa-door-open"></i> Create New Room</h1>

        {# Display flash messages #}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}

        {{ form_start(form) }}
        <div class="row g-3">
            <div class="col-md-6">
                {{ form_label(form.maxParticipants) }}
                {{ form_widget(form.maxParticipants, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.maxParticipants) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.scheduledTime) }}
                {{ form_widget(form.scheduledTime, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.scheduledTime) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.durationMinutes) }}
                {{ form_widget(form.durationMinutes, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.durationMinutes) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.createdBy) }}
                {{ form_widget(form.createdBy, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.createdBy) }}
            </div>
            <div class="col-md-6">
                {{ form_label(form.room_status) }}
                {{ form_widget(form.room_status, {'attr': {'class': 'form-select'}}) }}
                {{ form_errors(form.room_status) }}
            </div>
        </div>

        <button class="btn btn-primary mt-4"><i class="fas fa-plus-circle"></i> Create Room</button>
        {{ form_end(form) }}

        <a href="{{ path('app_room_index') }}" class="btn btn-secondary mt-3">
            <i class="fas fa-arrow-left"></i> Back to Room List
        </a>
    </div>
{% endblock %}
