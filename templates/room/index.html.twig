{% extends 'base.html.twig' %}

{% block title %}Rooms List{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-door-open"></i> Rooms Management</h1>
            <a href="{{ path('app_room_new') }}" class="btn btn-success">
                <i class="fas fa-plus"></i> Add New Room
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Max Participants</th>
                            <th>Scheduled Time</th>
                            <th>Duration</th>
                            <th>Created By</th>
                            <th>Status</th>
                            <th>Participants</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for room in rooms %}
                            <tr>
                                <td>{{ room.roomId }}</td>
                                <td>
                                    <i class="fas fa-users text-info"></i>
                                    {{ room.maxParticipants }}
                                </td>
                                <td>{{ room.scheduledTime|date('Y-m-d H:i') }}</td>
                                <td>{{ room.durationMinutes }} min</td>
                                <td>{{ room.createdBy }}</td>
                                <td>
                                <span class="badge bg-{{ room.roomStatus.value == 'available' ? 'success' : (room.roomStatus.value == 'occupied' ? 'warning' : 'danger') }}">
                                    {{ room.roomStatus.value }}
                                </span>
                                </td>
                                <td>
                                    <span class="badge bg-secondary">{{ room.users|length }} users</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_room_show', {'id': room.roomId}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_room_edit', {'id': room.roomId}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_room_delete', {'id': room.roomId}) }}" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ room.roomId) }}">
                                            <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="8" class="text-center text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>No rooms found</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}