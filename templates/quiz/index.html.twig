{% extends 'base.html.twig' %}

{% block title %}Quizzes List{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><i class="fas fa-question-circle"></i> Quizzes Management</h1>
            <a href="{{ path('app_quiz_new') }}" class="btn btn-warning">
                <i class="fas fa-plus"></i> Add New Quiz
            </a>
        </div>

        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Score</th>
                            <th>Date Created</th>
                            <th>Attempts</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for quiz in quizzes %}
                            <tr>
                                <td>{{ quiz.quizId }}</td>
                                <td>
                                    <span class="badge bg-success">{{ quiz.score }}</span>
                                </td>
                                <td>{{ quiz.datecreation|date('Y-m-d') }}</td>
                                <td>
                                    <span class="badge bg-info">{{ quiz.quizAttempts|length }} attempts</span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="{{ path('app_quiz_show', {'id': quiz.quizId}) }}" class="btn btn-sm btn-info">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_quiz_edit', {'id': quiz.quizId}) }}" class="btn btn-sm btn-warning">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_quiz_delete', {'id': quiz.quizId}) }}" style="display: inline;">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ quiz.quizId) }}">
                                            <button class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5" class="text-center text-muted">
                                    <i class="fas fa-inbox fa-3x mb-3"></i>
                                    <p>No quizzes found</p>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}